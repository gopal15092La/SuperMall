<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <title></title>
  <style>
    img.pimage {
        width: 150px;
        margin: 20px;
    }
    a.pa {
        display: inline-block;
        padding-top: min(height,20px);
    }
    .row.products.p{
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .row.products{
        margin-left: 170px;
        margin-right: 10px;
        padding-right: 0px;
    }
    body {
      margin: 0;
    }
    .nav-bar{
      background-color: rgb(213, 78, 213);
      margin-top: 0;
      display: flex;
      box-shadow: 0px 3px 5px rgb(40, 5, 40);
      padding: 11px;
    }
    .just-name{
      font-family: cursive;
      font-size: 30px;
      margin-top: 11px;
    }
    .options {
      display: flex;
      justify-content: space-between; /* Space between left and right sections */
      align-items: center; /* Vertically align items in the center */
    }

    .options ul {
      list-style: none;
      font-size: 20px;
    }

    .options ul li {
      text-decoration: none;
      display: inline-block;
      margin-right: 10px;
    }

    .options ul li a {
      text-decoration: none;
      font-weight: bold;
      color: black;
    }

    .just-name:hover,.options li:hover {
      color: white;
      cursor: pointer;
    }
    .container{
      flex: 1;
      max-width: 150px;
      margin: 30px;
      text-align: center;
      box-shadow: 3px 3px 3px 3px rgb(80, 70, 80);
      align-items: center;
       margin-top: 10px;
      padding-top: 20px; 
      /* justify-content: space-between; */
    }
    @media screen and (max-width: 600px) {
      .nav-bar {
        flex-direction: column;
        align-items: center; 
      }

      .just-name {
        margin-top: 0;
        margin-bottom: 10px;
        text-align: center; 
      }

      .options ul li {
        display: block;
        margin: 5px 0;
        text-align: center;
      }
    }

  </style>
</head>
<body>

  <nav class="nav-bar">
    <div class="just-name">
      SuperMall
    </div>

    <div class="options">
        <ul>
          <% if(globalPages) {%>
          <% globalPages.forEach(page => {%>
              <% if(page.title === "Home"){ %>
                <li><a href="/"><%= page.slug %></a></li>
              <%}else{%>
                <li><a href="<%= page.slug %>" ><%= page.title %></a></li>
              <%}%>
          <%}); %>
          <% }%>
        </ul>
        <ul>
          <li>
            <a href="/cart/checkout">My Cart(
                <% if (typeof cart !== 'undefined' && cart.length > 0) { %>
                    <%= cart.reduce((total, item) => total + item.qty, 0) %>
                <% } else { %>
                    0
                <% } %>
            )</a>
        </li>
      </ul>

        <ul>
          <% if(user) { %>
            <li class="nav-item register"><a href="/users/logout" class="nav-link">Hi,
                <%= user.username %>&nbsp;&nbsp;(logout)</a></li>
            <% } else { %>
            <li class="nav-item register"><a href="/users/register" class="nav-link">Register</a></li>
            <li class="nav-item register"><a href="/users/login" class="nav-link">Log In</a></li>
            <% } %>
            <% if(user && user.admin == 1) { %>
            <li class="nav-item register"><a href="/admin/pages" class="nav-link" style="color: brown;">Admin Area</a></li>
            <% } %>

        </ul>
    </div>
  </nav>

  
  <div >

    <!-- style="display: flex; justify-content: space-between;" -->
    <div class="ctnt" >
    <div class="container">

          <% if(errors) { %>
            <% errors.forEach(error => { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <script>
                setTimeout(function(){
                  document.querySelector('.alert').remove();
                }, 1500); // 1.5 seconds
              </script>
            <% }); %>
          <% } %>
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th>Categories</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><a href="/products">All Products</a></td>
                  </tr>
                  <% if(globalCategories && globalCategories.length > 0) { %>
                    <% globalCategories.forEach(cat => { %>
                      <tr>
                        <td><a href="/products/<%= cat.slug %>"><%- cat.title %></a></td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="1">No categories found.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

          
    

  <!-- <%- messages('messages', locals) %> -->
 </div>
 </div>
    

